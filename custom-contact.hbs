{{!< default}}

<!--page wrapper start form here-->
<div class="page-wrapper">
    {{^is "home"}}
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                {{#post}}
                <div class="breadcrumbs-area">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb d-flex pl-0 mb-0">
                            <li class="breadcrumb-item" aria-current="page"><span class="w-14 d-inline-block -mb-2">{{> icons/home}}</span> <a href="{{@site.url}}">{{t "Home"}}</a></li>
                            <li class="breadcrumb-item active" aria-current="page">{{title}}</li>
                        </ol>
                    </nav>
                </div>
                {{/post}}
            </div>
        </div>
    </div>
    {{/is}}
    {{!-- contact-section --}}
    <div class="contact-section-area">
        <div class="container">
            <div class="contact-section-wrapper">
                {{#post}}
                {{#if feature_image}}
                <div class="news-picture my-20">
                    <img loading="lazy" srcset="{{img_url feature_image size="s"}} 300w,
                        {{img_url feature_image size="m"}} 600w,
                        {{img_url feature_image size="l"}} 1000w,
                        {{img_url feature_image size="xl"}} 1300w,
                        {{img_url feature_image size="xxl"}} 2000w" sizes="(max-width: 1300px) 400px, 1200px"
                        src="data:image/gif;base64,R0lGODlhAQABAAD/ACwAAAAAAQABAAACADs=" 
                        data-src="{{img_url feature_image size="xl"}}" alt="{{title}}" />
                </div>
                {{/if}}
                {{/post}}
                <div class="contact-details-area pt-30 pb-lg-100">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="contact-area">
                                <div class="mb-40">
                                    <div class="contact-head  mb-20">
                                        <h3>{{t "Get In Touch"}}</h3>
                                        <p>{{t "Don't worry we never spam. Required fields are marked *."}}</p>
                                    </div>
                                    <!-- Single Contact form -->
                                    <form class="contact-form" action="https://formspree.io/f/xjvlkaqd" method="POST">
                                        <div class="form-row">
                                            <div class="form-group icon-input col-md-6">
                                                <span>{{> icons/user}}</span>
                                                <input type="name" name="user" type="text" class="form-control bg-white-smoke " placeholder="{{t "First Name *"}}" required>
                                            </div>
                                            <div class="form-group icon-input col-md-6">
                                                <span>{{> icons/user}}</span>
                                                <input type="name" name="user" type="text" class="form-control bg-white-smoke " placeholder="{{t "Last Name*"}}" required>
                                            </div>
                                            <div class="form-group icon-input col-md-6">
                                                <span>{{> icons/envelope}}</span>
                                                <input type="email" name="email" class="form-control bg-white-smoke " placeholder="{{t "Email Address *"}}" required>
                                            </div>
                                            <div class="form-group icon-input col-md-6">
                                                <span>{{> icons/call}}</span>
                                                <input type="text" class="form-control bg-white-smoke" placeholder="{{t "Phone No"}}" required>
                                            </div>
                                            <div class="form-group icon-input col-md-12">
                                                <span>{{> icons/chat}}</span>
                                                <textarea name="message" id="validationTextarea" class="form-control bg-white-smoke" rows="5" placeholder="{{t "Your message *"}}" required></textarea>
                                            </div>
                                            <div class="form-group mt-30">
                                                <button type="submit" class="btn btn-md btn-primary text-white">{{t "SEND MESSAGE"}}</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>