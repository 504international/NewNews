{{!< default}}

{{#post}}
    <div class="page-wrapper">
        {{> bredcrumb}}
       
        <div class="published-news-section">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="single-news-details">
                            {{> "post-header"}}
                        </div>
                    </div>
                </div>
                
                {{#if feature_image}}
                <div class="row">
                    <div class="col-md-12">
                        <div class="news-picture">
                            <img loading="lazy" srcset="{{img_url feature_image size="s"}} 300w,
                            {{img_url feature_image size="m"}} 600w,
                            {{img_url feature_image size="l"}} 1000w,
                            {{img_url feature_image size="xl"}} 2000w"
                            sizes="(max-width: 800px) 400px,
                            (max-width: 1170px) 700px,
                            1400px" src="data:image/gif;base64,R0lGODlhAQABAAD/ACwAAAAAAQABAAACADs=" data-src="{{img_url feature_image size="xl"}}" alt="{{title}}">
                        </div>
                    </div>
                </div>
                {{/if}}
            </div>
        </div>
    </div>
    {{!-- News-full-content --}}
    <div class="post-without-sidebar-area mt-30">
        <div class="container">
            <div class="row">
                <div class="col-md-10 mx-auto">
                    {{> content table_contents="true"}}
                </div>
            </div>
        </div>
    </div>
    {{!-- Related Posts --}}
    {{> related-posts}}
{{/post}}



{{#contentFor "scripts"}}
<script>
    // tocbot
    tocbot.init({
        tocSelector: '.toc',
        contentSelector: '.toc-content',
        headingSelector: 'h2, h3',
        hasInnerContainers: true,
    });
    $(".toc-wrap").hide();
    if( $(".toc").children().length > 0 ){
        $(".toc-wrap").show();
    }

</script>
{{/contentFor}}