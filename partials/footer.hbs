<div class="footer-section-area py-50">
    <div class="container">
        <div class="row">
            {{#get "tags" limit="10" include="count.posts" order="count.posts desc"}}
                {{#if tags}}
                <div class="col-lg-6 col-md-6">
                    <div class="single-footer">
                        <div class="footer-tag">
                            <div class="footer-head">
                                <h5>{{t "Popular Categories"}}</h5>
                            </div>
                            <div class="tag-list">
                                <ul>
                                    {{#foreach tags visibility="public"}}
                                        <li><a href="{{url}}">{{name}}</a></li>
                                    {{/foreach}}
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                {{/if}}
            {{/get}}
            <div class="col-lg-6 col-md-6">
                    <div class="single-footer">
                        <div class="footer-tag">
                            <div class="footer-head">
                                <h5>{{t "Company"}}</h5>
                            </div>
                            <div class="tag-list">
                                <ul>
                                     {{navigation type="secondary"}}
                                </ul>
                            </div>
                        </div>
                    </div>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-center mt-10">
            <div class="">
                <div class="single-footer">
                    <div class="f-logo">
                        {{#if @site.logo}}
                            <a href="{{@site.url}}"><img src="{{@site.logo}}" alt="logo-img"></a>
                            {{else}}
                            <h2><a href="{{@site.url}}">{{@site.title}}</a></h2>
                        {{/if}}
                    </div>
                    {{!-- <div class="footer-text">
                        <p>{{t "Africa Rebirth seeks to shed a light on untold African history"}}</p>
                    </div> --}}

                   
                </div>
            </div>
        </div>
</div>
