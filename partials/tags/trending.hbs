{{#get "posts" limit="9"  include="tags"}}
    {{#if posts}}
        <div class="trending-news-section section-space">
            <div class="container">
                <div class="section-title d-flex align-items-center mt-50 mb-30">
                    {{> title-bar}}
                    <h4>{{t "Trending"}}</h4>
                </div>
                <div class="post-wrapper-content">
                    <div class="row">
                        {{#foreach posts limit="3" to="1" visibility="all"}}
                            <div class="col-lg-4 col-md-6">
                                <div class="post mb-25">
                                    <div class="single-post height-220 d-flex flex-column justify-content-end px-30 py-20" {{#if  feature_image}} style="background-image:url('{{feature_image}}');"{{/if}}>
                                        {{#primary_tag}}
                                        <div class="feature-tag">
                                            <a href="{{url}}">{{name}}</a>
                                        </div>
                                        {{/primary_tag}}
                                        <a class="post-card-link" href="{{url}}"></a>
                                        <div class="postcard-text mt-60">
                                            <h5><a href="{{url}}">{{title}}</a></h5>
                                            <div class="card-details">
                                                <p class="d-flex align-items-center">
                                                    <span class="w-14 inline-block">{{> icons/date}}</span>&nbsp;&nbsp;{{date format="MMM DD, YYYY"}}
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {{/foreach}}
                    </div>
                </div>
                <div class="trending-post-area">
                    <div class="post-wrapper-content">
                        <div class="row">
                            {{#foreach posts from="4" limit="6" visibility="all"}}
                                <div class="col-lg-4 col-md-6">
                                    {{> post-card/small-thumbnail}}
                                </div>
                            {{/foreach}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{/if}}
{{/get}}