<!-- pagination section -->
<div class="pagination-section">
    <div class="newer-post">
        {{#if prev}}
        <a href="{{page_url prev}}">&#10094; &nbsp;<span class="hide">{{t "Previous Posts"}}</span></a>
        {{/if}}
    </div>
    <span class="page-number">{{t "Page {page} of {pages}" page=page pages=pages}}</span>
    <div class="older-post">
        {{#if next}}
        <a href="{{page_url next}}"><span class="hide">{{t "Next Posts"}}</span>&nbsp; &#10095;</a>
        {{/if}}
    </div>
</div>
<!-- /pagination section -->