{{!< default}}

<!-- Membership Banner -->
<div class="banner-section pt-50">
    <div class="container"> 
        <div class="row">
            <div class="col-md-10 col-lg-8 pb-md-0 pb-20 mx-auto text-center"> 
                <div class="banner-content">
                    {{#if @member.paid}}
                        <h1>{{t "Nice, You are a paid member"}}</h1>
                    {{else}}
                        <div class="pb-40">
                            <h1>{{t "Currently, You are a subscriber"}}</h1>
                            <p>{{t "You've an active account with access to articles for subscribers only. Upgrade your account and get access to the full library of articles."}}</p>
                        </div>
                        <div class="subscriber-account-info d-flex justify-content-between align-items-center flex-wrap">
                            <div class="email-info">
                                <div class="email-address">{{t "Email address"}}</div>
                                <div class="subscriber-email">{{@member.email}}</div>
                            </div>
                            <div class="plan-info">
                                <div class="plan">{{t "Your plan"}}</div>
                                <div class="plan-price">{{t "Free"}} {{plan.interval}}</div>
                            </div>
                        </div>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>
<!-- // Membership Banner -->


{{#if @member}}
<!-- PRICING TABLE START -->
<div class="pricing-sec section-padding">
    <div class="container">
        {{#if @member.paid}}
        <div class="row">
            <div class="col-sm-10 col-lg-8 mx-auto">
                <div class="account-holder-info account-box">
                    <div class="account-informations">
                        {{> members/subscriber-information}}
                    </div>
                </div>
            </div>
        </div>
        {{else}}
        <div class="row">
            <div class="col-sm-10 col-lg-8 mx-auto">
                <div class="Choose-box">
                    <div class="plan-heading text-center">
                        <h3 class="mb-0">{{t "Upgrade your plan"}}</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            {{> members/pricing-table}}
        </div>
        {{/if}}
    </div>
</div>
<!-- PRICING TABLE END -->
{{else}}
    {{!-- Member: Redirect to membership --}}
    <script>window.location = '{{@site.url}}/membership/';</script>
{{/if}}