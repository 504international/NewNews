{{!< default}}

{{#if @member.paid}}
    {{!-- Logged in: Redirect home --}}
    <script>window.location = '{{@site.url}}';</script>
{{else if @member}}
    {{!-- Member: Redirect to Subscribe --}}
    <script>window.location = '{{@site.url}}/account/';</script>
{{else}}

<!-- subscribe section start from here    -->
<div class="subscribe-section py-50 pt-lg-100 pb-lg-100">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-title text-center mb-40">
                    <h2>{{t "Welcome Back!"}}</h2>
                    <p>{{t "Please Sign in to your account for full access"}}</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8  col-md-10 mx-auto text-center">
                <div class="signup-form">
                    <form data-members-form="signin">
                        <div class="overflow-hidden">
                            <input data-members-email class="form-control" type="email" required="true" autocomplete="false" placeholder="{{t "Enter your email"}}">
                            <button  type="submit" class="btn btn-primary btn-subscribe text-white p-0">
                                <span class="button-text">{{t "Signin"}}</span>
                                <span class="button-loader">{{> "icons/loader"}}</span>
                            </button>
                        </div>
                        <p>{{t "Don't have an account yet?"}}<a href="{{@site.url}}/signup/">&nbsp;{{t "Sign up"}}</a></p>
                        <div class="message-text">
                            <div class="message-success">
                                {{{t "<strong>Great!</strong> Check your inbox and click the link to confirm your subscription"}}}
                            </div>
                            <div class="message-error">
                                {{t "Please enter a valid email address!"}}
                            </div>
                        </div>
                    </form>
                </div>
            </div>   
        </div>
    </div>
</div>
<!-- // subscribe section end from here   -->
{{/if}}